{
    "version": 8,
    "name": "Custom",
    "metadata": {
      "mapbox:autocomposite": true
    },
    "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
    "sources": {
      "composite": {
        "type": "vector",
        "tiles": ["http://localhost:8080/gemeinden-uncompressed/{z}/{x}/{y}.pbf"],
        "minzoom": 0,
        "maxzoom": 15
      }
    },
    "layers": [
      {
        "id": "background",
        "type": "background",
        "paint": {
          "background-color": "#ffdecb"
        }
      },
      {
        "id": "gemeinden-line",
        "type": "line",
        "source": "composite",
        "source-layer": "gemeindengeo",
        "minzoom": 0,
        "maxzoom": 14,
        "paint": {
            "line-color": "#FFFFFF",
            "line-width": 2
        }
      }
    ]
  }